extends ../../layout.jade
extends ../home.jade
block contenido_2
	div(class="container")
		div(class="row")
		h1 Crear Nuevo Ingrediente
		form(action="/app/ingredientes", method="POST", class="col m5", enctype="multipart/form-data")
			div(class="card-panel")
				div(class="row")
					div(class="input-field col s12")
						input(type="text", name="title", placeholder="Título de Ingrediente", id="title" class="validate")
						label(for="title") Título
				div(class="row")
					div(class="input-field col s12")
						input(type="file", name="image", id="image")
				div(class="row")
					div(class="input-field col s12 center")
						button(class="btn waves-effect waves-light" type="submit" name="action") Guardar 
							i(class="material-icons right") send
