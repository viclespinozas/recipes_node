extends ../../layout.jade
block contenido
	div(class="col-md-4 remove-float center-block big-top-space")
		h1 Subir nueva imagen
		form(action="/app/imagenes", method="POST")
			div(class="form-group")
				label(for="title") Título
				input(type="text", name="title", placeholder="Título de Imagen", id="title" class="form-control")
			div
				label(for="archivo") Imagen
				input(type="file", name="archivo", id="archivo" class="form-control")
			
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Iniciar Sesion" class="btn btn-info")
