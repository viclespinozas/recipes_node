extends ../../layout.jade
extends ../home.jade
block contenido_2
	div(class="container")
		div(class="row")
		h1 Crear Nueva Receta
		form(action="/app/recetas", method="POST", class="col m8", enctype="multipart/form-data")
			div(class="card-panel")
				div(class="row")
					div(class="input-field col s12")
						input(type="text", name="title", placeholder="Título de Receta", id="title" class="validate")
						label(for="title") Título
				div(class="row")
					div(class="input-field col s12")
						input(type="file", name="image", id="image" )
				div(class="row")
					div(class="input-field col s12")
						select(multiple class="icons" name="ingredientes" id="ingredientes")
							option(value="" disabled selected) Seleccione Ingredientes
							for ingrediente in ingredientes
								option(value="#{ingrediente.title}" data-icon="/public/img/ingredientes/#{ingrediente._id}.#{ingrediente.imagen}" class="circle")= ingrediente.title
						label Ingredientes
				div(class="row")
					div(class="input-field col s12")
						textarea(name="preparacion", id="preparacion" class="materialize-textarea")
						label(for="preparacion") Preparación
				div(class="row")
					div(class="input-field col s12 center")
						button(class="btn waves-effect waves-light" type="submit" name="action") Guardar 
							i(class="material-icons right") send
